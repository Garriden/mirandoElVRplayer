<Window x:Class="VrPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:VrPlayer.Views"
        xmlns:converters="clr-namespace:VrPlayer.Helpers.Converters;assembly=VrPlayer.Helpers"
        Icon="vrplayer.ico"
        Title="VR Player"
        Background="Black"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <converters:InvertBooleanToVisibilityConverter x:Key="InvBoolToVis"/>
    </Window.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Top" Visibility="{Binding Path=State.TrackerPlugin.Tracker.IsActive, Converter={StaticResource InvBoolToVis}}">
            <Views:Menu />
        </Grid>
        <Grid DockPanel.Dock="Bottom" Visibility="{Binding Path=State.TrackerPlugin.Tracker.IsActive, Converter={StaticResource InvBoolToVis}}">
            <Views:ControlPanel />
        </Grid>
        <Views:ViewPort />
    </DockPanel>
</Window>