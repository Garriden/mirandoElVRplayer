<Window x:Class="VrPlayer.Views.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:VrPlayer.Views" xmlns:settings="clr-namespace:VrPlayer.Views.Settings"
        Icon="/Medias/Nuvola/16x16/kservices.png"
        Title="Settings" Height="450" Width="550" WindowStyle="ToolWindow" Margin="0" Padding="0">
    <TabControl x:Name="Tabs" TabStripPlacement="Left" Margin="-4">
        <TabItem UseLayoutRounding="False">
            <TabItem.Header>
                <StackPanel Orientation="Vertical" Width="64">
                    <Image Height="48" Width="48" Source="/Medias/Nuvola/48x48/kservices.png" />
                    <TextBlock Text="General" HorizontalAlignment="Center" />
                </StackPanel>
            </TabItem.Header>
            <views:GeneralSettings />
        </TabItem>
        <TabItem UseLayoutRounding="False">
            <TabItem.Header>
                <StackPanel Orientation="Vertical" Width="64">
                    <Image Height="48" Width="48" Source="/Medias/Nuvola/48x48/input_devices_settings.png" />
                    <TextBlock Text="Shortcuts" HorizontalAlignment="Center" />
                </StackPanel>
            </TabItem.Header>
            <settings:ShortcutsSettings />
        </TabItem>
    </TabControl>
</Window>
